/ {
    combos {
        compatible = "zmk,combos";

        combo_esc {
            timeout-ms = <60>;
            key-positions = <1 2>;
            bindings = <&kp TAB>;
            require-prior-idle-ms = <120>;
        };

        tilde_combo {
            bindings = <&kp TILDE>;
            key-positions = <0 20>;
            timeout-ms = <60>;
            require-prior-idle-ms = <100>;
        };

        space {
            bindings = <&kp SPACE>;
            key-positions = <13 12 11>;
            timeout-ms = <70>;
            require-prior-idle-ms = <100>;
        };

        enter_right_combo {
            bindings = <&kp ENTER>;
            key-positions = <16 18 17>;
            timeout-ms = <70>;
            require-prior-idle-ms = <100>;
        };

        backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <27 28>;
        };

        del {
            bindings = <&kp DEL>;
            key-positions = <28 29>;
        };

        esc {
            bindings = <&kp ESCAPE>;
            key-positions = <1 2 3>;
            timeout-ms = <60>;
            require-prior-idle-ms = <120>;
        };

        another-backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <8 9>;
        };

        another-del {
            bindings = <&kp DEL>;
            key-positions = <9 8 7>;
        };

        pipe {
            bindings = <&kp NON_US_BACKSLASH>;
            key-positions = <9 31>;
            timeout-ms = <60>;
            require-prior-idle-ms = <100>;
        };

        another-tab {
            bindings = <&kp TAB>;
            key-positions = <1 0>;
            timeout-ms = <60>;
            require-prior-idle-ms = <120>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄

        base_layer {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

